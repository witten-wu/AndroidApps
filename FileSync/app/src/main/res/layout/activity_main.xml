<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Subject 001 -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/subject001Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject 001"
            android:backgroundTint="@color/button_normal" />

        <ProgressBar
            android:id="@+id/progressBar001"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/subject002Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject 002"
            android:backgroundTint="@color/button_normal" />

        <ProgressBar
            android:id="@+id/progressBar002"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/subject003Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject 003"
            android:backgroundTint="@color/button_normal" />

        <ProgressBar
            android:id="@+id/progressBar003"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>