<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#E3F2FD"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_person"
                android:layout_marginEnd="0dp"
                app:tint="#1976D2" />

            <TextView
                android:id="@+id/subjectIdDisplay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="当前被试: "
                android:textSize="24sp"
                android:textColor="#1976D2"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/exchangeSubjectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_exit_to_app"
                    android:layout_marginEnd="0dp"
                    app:tint="#1976D2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="切换被试"
                    android:textSize="24sp"
                    android:textColor="#1976D2"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

    <Button
        android:id="@+id/buttonE"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:text="Naming Screener - Noun"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center" />

    <Button
        android:id="@+id/buttonF"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:text="Naming Screener - Verb"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonE"/>

    <Button
        android:id="@+id/buttonA"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:text="SFA"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonF"/>

    <Button
        android:id="@+id/buttonB"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:text="VNeST"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonA" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:text="Rabbit Story"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonB" />

    <Button
        android:id="@+id/buttonD"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:text="Language Study"
        android:textSize="20sp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonC" />

