<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="32dp">

    <!-- 完成图标 -->
    <ImageView
        android:id="@+id/completionIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@android:drawable/ic_dialog_info"
        android:tint="#4CAF50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/completionTitle"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="UseAppTint" />

    <!-- 标题文字 -->
    <TextView
        android:id="@+id/completionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="實驗已結束"
        android:textSize="48sp"
        android:textColor="#2E7D32"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/completionIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/completionMessage" />

    <!-- 感谢文字 -->
    <TextView
        android:id="@+id/completionMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="謝謝您的參與！"
        android:textSize="30sp"
        android:textColor="#424242"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/completionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/returnButton" />

    <!-- 返回按钮 -->
    <Button
        android:id="@+id/returnButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="返回"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:layout_marginTop="32dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintTop_toBottomOf="@+id/completionMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>