<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- ImageView: 居于屏幕正中 -->
    <ImageView
        android:id="@+id/tigerImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="A sample picture"
        android:scaleType="centerCrop"
        android:src="@drawable/tiger"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView: 紧贴图片上方 -->
    <TextView
        android:id="@+id/tigerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是什么？"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/tigerImage"
        app:layout_constraintStart_toStartOf="@id/tigerImage"
        app:layout_constraintEnd_toEndOf="@id/tigerImage" />

</androidx.constraintlayout.widget.ConstraintLayout>