<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/tigerImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="A sample picture"
        android:scaleType="centerCrop"
        android:src="@drawable/tiger"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/featuresContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tigerImage">

        <TextView
            android:id="@+id/feature1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="#FFAB3D"
            android:elevation="3dp"
            android:gravity="center"
            android:padding="3dp"
            android:tag="true"
            android:text="是一种动物"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/feature5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="#FFAB3D"
            android:elevation="3dp"
            android:gravity="center"
            android:padding="3dp"
            android:tag="true"
            android:text="是捕食者"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/feature8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="#FFAB3D"
            android:elevation="3dp"
            android:gravity="center"
            android:padding="3dp"
            android:tag="true"
            android:text="动作迅速的"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/feature9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="#FFAB3D"
            android:elevation="3dp"
            android:gravity="center"
            android:padding="3dp"
            android:tag="true"
            android:text="可以吃人  "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/feature10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="#FFAB3D"
            android:elevation="3dp"
            android:gravity="center"
            android:padding="3dp"
            android:tag="true"
            android:text="食肉的"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 5 个分类框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="300dp">

        <LinearLayout
            android:id="@+id/functionBox"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:background="@android:color/holo_blue_dark"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作用"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/characteristicsBox"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:background="@android:color/holo_blue_dark"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特点"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/physicalAttributesBox"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:background="@android:color/holo_blue_dark"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物理属性"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/locationBox"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:background="@android:color/holo_blue_dark"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/categoryBox"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_blue_dark"
            android:layout_gravity="center"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类别"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>