<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/Q1Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="#FF6750A4"
            android:gravity="center"
            android:padding="3dp"
            android:tag="true"
            android:text="板车推工人"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:text="Yes"
                android:textSize="20sp" />

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:text="No"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Q2Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Q1Container">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="#FF6750A4"
            android:gravity="center"
            android:padding="3dp"
            android:tag="true"
            android:text="金鱼推板车"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:text="Yes"
                android:textSize="20sp" />

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:text="No"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Q3Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Q2Container">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="#FF6750A4"
            android:gravity="center"
            android:padding="3dp"
            android:tag="true"
            android:text="工人推围巾"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:text="Yes"
                android:textSize="20sp" />

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:text="No"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Q4Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Q3Container">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="#FF6750A4"
            android:gravity="center"
            android:padding="3dp"
            android:tag="true"
            android:text="工人推板车"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:text="Yes"
                android:textSize="20sp" />

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:text="No"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>